{
  "name": "pull-request-bundle-analyzer",
  "version": "0.0.0",
  "description": "A tool to analyze JavaScript bundle sizes and compare results between runs",
  "keywords": [
    "pull requests",
    "bundle"
  ],
  "homepage": "https://github.com/ext/pull-request-bundle-analyzer",
  "bugs": "https://github.com/ext/pull-request-bundle-analyzer/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ext/pull-request-bundle-analyzer.git"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "files": [
    "dist",
    "schema.json"
  ],
  "scripts": {
    "prebuild": "tsc",
    "build": "node build.mjs",
    "eslint": "eslint --cache .",
    "eslint:fix": "eslint --cache --fix .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "vitest run"
  },
  "prettier": "@html-validate/prettier-config",
  "dependencies": {
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@html-validate/eslint-config": "6.11.1",
    "@html-validate/eslint-config-typescript": "6.11.1",
    "@html-validate/eslint-config-typescript-typeinfo": "6.11.1",
    "@html-validate/prettier-config": "3.1.10",
    "@microsoft/api-extractor": "7.55.2",
    "@tsconfig/node22": "22.0.5",
    "@tsconfig/recommended": "1.0.13",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "22.19.1",
    "@types/stream-buffers": "3.0.8",
    "@types/yargs": "17.0.35",
    "@vitest/coverage-v8": "4.0.15",
    "esbuild": "0.27.1",
    "is-ci": "4.1.0",
    "memfs": "4.51.1",
    "npm-pkg-lint": "4.3.1",
    "stream-buffers": "3.0.3",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "engines": {
    "node": ">= 22.19"
  },
  "externalDependencies": []
}
